<div class="section-title">
  <h1><%=@shelf.user.firstname%>'s <%=@shelf.name%> Books</h1>
  <% if @shelf.user == current_user %>
    <%= link_to image_tag('edit-icon.png'), edit_shelf_path(@shelf) %>
    <%= form_tag("/shelves/#{@shelf.id}", method: 'delete') do %>
      <%= image_submit_tag('delete-icon.png') %>
    <% end %>
  <% end %>
</div>
<%= render 'books/book_grid', {books: @shelf.books} %>

