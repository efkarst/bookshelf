<h1>Results for '<%=params[:search]%>' </h1>

<!-- *********************  Book Grid - Search Results ********************* -->
<div class="grid">
  <% @books.each do |book| %>
    <div class="grid-item" >
      <%= link_to image_tag(book.cover_image), book_search_path(book.identifier) %>
      <p class='title-label'><%= link_to book.title, book_search_path(book.identifier) %></p>
      <p class='author-label'><%= book.author.name %></p>
      <%= render 'new_book_from_search_form', {book: book} %>
    </div> <!-- grid-item -->
  <% end %>
</div> <!-- grid -->
