<!-- *********************  Error Messages  ********************* -->
<%= render 'users/errors', {object: review} %>

<!-- *********************  Form  ********************* -->
<%=form_for(review, url: (new_review ? book_reviews_path : book_review_path(book,review))) do |f| %>
  <h2><%= f.label "Title" %></h2>
  <%= f.text_field :title %>
  <h2><%= f.label "Rating (1-5)" %></h2>
  <%= f.text_field :rating %>
  <h2><%= f.label "Review" %></h2>
  <%= f.text_area :review %>
  <%= f.hidden_field :user_book_id, value: user_book_id(book.id, current_user.id)%>
  <%= f.submit "Post Review", class: "button" %>
<% end %>