<h1>Review <%=@book.title%></h1>

<!-- *********************  Error Messages  ********************* -->
<%if @review && @review.errors.any?%>
  <div class="error-text wrapper clearfix">
    <%=@review.errors.full_messages.to_sentence%>
  </div> <!--  .flash  -->
<%end%>


<%=form_for(@review, url: book_review_path(@book,@review)) do |f| %>
  <h2><%= f.label "Title" %></h2>
  <%= f.text_field :title %>
  <h2><%= f.label "Rating (1-5)" %></h2>
  <%= f.text_field :rating %>
  <h2><%= f.label "Review" %></h2>
  <%= f.text_area :review %>
  <%= f.hidden_field :user_book_id, value: user_book_id(@book.id, current_user.id)%>
  <%= f.submit "Post Review", class: "button" %>
<% end %>