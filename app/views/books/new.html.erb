<section>
  <div class="grid">
    <% @books.each do |book| %>
      <div class="grid-item" >
        <%= image_tag book.cover_image %>
        <p class='label'><%= book.title %></p>
        <p class='label'><%= book.author.name %></p>
        <%= render 'new_form', {book: book} %>
      </div> <!-- grid-item -->
    <% end %>
  </div> <!-- grid -->
</section>
