<%= form_tag(new_book_path, method: 'get') do %>
  <div class="form-group">
    <%= text_field_tag 'search' %>
    <%= submit_tag 'Search for books' %>
  </div>
<% end %>


<% if @books %>
  <%= @books.each do |book| %>
    <%=@book.name %>
  <% end %>
<% end %>


<% @user.shelves.each do |shelf| %>
  <h3><%=shelf.name%></h3>
<% end %>