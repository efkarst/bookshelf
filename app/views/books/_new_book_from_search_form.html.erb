<%=form_for book, url: create_book_search_path do |f|%>
  <%= f.hidden_field :title, value: book.title %>
  <%= f.hidden_field :pages, value: book.pages %>
  <%= f.hidden_field :author_name, value: book.author.name %>
  <%= f.hidden_field :genre_name, value: book.genre.name %>
  <%= f.hidden_field :description, value: book.description %>
  <%= f.hidden_field :pages, value: book.pages %>
  <%= f.hidden_field :cover_image, value: book.cover_image %>
  <%= f.hidden_field :identifier, value: book.identifier %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit "Add to My Books", class: 'button-small', id: book.identifier %>
<% end %>