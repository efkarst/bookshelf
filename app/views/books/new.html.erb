<section>
  <div class="grid">
    <% @books.each do |book| %>
      <div class="grid-item" >
        <%= link_to image_tag(book.cover_image), search_show_path(book.identifier) %>
        <p class='label'><%= link_to book.title, search_show_path(book.identifier) %></p>
        <p class='label'><%= book.author.name %></p>
        <%= render 'new_form', {book: book} %>
      </div> <!-- grid-item -->
    <% end %>
  </div> <!-- grid -->
</section>
